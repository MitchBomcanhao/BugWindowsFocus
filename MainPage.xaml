<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BugWindowsFocus.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ScrollView>
        <VerticalStackLayout Padding="31,0" Spacing="25">
            <Editor />
            <Entry Placeholder="type something here, just to move focus away from the editor above" />
            <Label Padding="0,500" BackgroundColor="Green" Text="scroll down until you can see the Open Modal button"/>
            <Button
                x:Name="OpenModal"
                Clicked="OnOpenModalClicked"
                HorizontalOptions="Fill"
                Text="open modal page" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
